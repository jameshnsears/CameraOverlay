<resources>
    <style name="Platform.Theme.PicturePostcard" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black30</item>
    </style>

    <style name="Theme.PicturePostcard" parent="Platform.Theme.PicturePostcard">
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryDark">@color/blue800</item>
        <item name="colorAccent">@color/yellow700</item>
    </style>

    <style name="Theme.PicturePostcard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PicturePostcard.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.PicturePostcard.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>