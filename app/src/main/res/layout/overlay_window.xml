<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_window_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="0dp">

                <ImageView
                    android:id="@+id/imageViewTransparency"
                    android:layout_width="34dp"
                    android:layout_height="24dp"
                    android:layout_gravity="start|center_vertical"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_baseline_visibility_24" />

                <SeekBar
                    android:id="@+id/seekBarTransparency"
                    style="@style/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="17dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/closeImageButtonCloseWindow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/todo"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_close_24"
                android:tintMode="src_in" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewSelectedPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="false"
            android:contentDescription="@string/overlay_window_selected_photo"
            android:src="@drawable/cat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="0dp">

                <ImageView
                    android:id="@+id/imageViewThreshold"
                    android:layout_width="34dp"
                    android:layout_height="24dp"
                    android:layout_gravity="start|center_vertical"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_baseline_vertical_align_center_24" />

                <SeekBar
                    android:id="@+id/seekBarBlur"
                    style="@style/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="16dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>