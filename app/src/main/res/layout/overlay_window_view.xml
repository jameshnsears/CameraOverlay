<?xml version="1.0" encoding="utf-8"?>
<com.github.jameshnsears.cameraoverlay.view.overlay.window.OverlayWindowLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/overlay_window_border"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/window_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/overlay_window_border"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/window_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:layout_weight="0.5"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/overlay_window_back"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageButton
            android:id="@+id/window_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:layout_weight="0.5"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/overlay_window_close"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/cat_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/overlay_window_photo"
        android:src="@drawable/cat"
        android:tintMode="src_in"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

</com.github.jameshnsears.cameraoverlay.view.overlay.window.OverlayWindowLinearLayout>